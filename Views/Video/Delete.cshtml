@model AfroLatino.Models.Video

@{
    ViewData["Title"] = "Supprimer vidéo";
}

<h1>Supprimer une vidéo</h1>

<br/>
<h4>Êtes-vous sûr ?</h4>
<div>
    <hr />
    <div class="row">
        <div class="col-7">
    <dl class="row">
        <dt class="col-sm-3">
            Titre : 
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-3">
            Type : 
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Type)
        </dd>
    </dl>
    </div>
    <div class="col-5">
        @if (Model.SourceVideo != null)
            {
                <video src="~/videos/@Model.SourceVideo" alt="video evenement" style="width:80%;margin-top:5px;"/>
            }
    </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index"><button class="btn btn-danger">Retour aux vidéos</button></a>
    </form>
</div>